<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Game Status TextView -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Player X's Turn"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Tic-Tac-Toe Grid -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:padding="16dp"
        android:rowCount="3">

        <!-- Buttons for 3x3 Grid -->
        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#BC1717"
            android:contentDescription="Tic Tac Toe Cell 1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#1DA2B3"
            android:contentDescription="Tic Tac Toe Cell 2"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#C59B1C"
            android:contentDescription="Tic Tac Toe Cell 3"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Tic Tac Toe Cell 4"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#12CE19"
            android:contentDescription="Tic Tac Toe Cell 5"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#C2908484"
            android:contentDescription="Tic Tac Toe Cell 6"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#E91E63"
            android:contentDescription="Tic Tac Toe Cell 7"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#4910D7C4"
            android:contentDescription="Tic Tac Toe Cell 8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#F82440DC"
            android:contentDescription="Tic Tac Toe Cell 9"
            android:textSize="24sp" />
    </GridLayout>

    <!-- Sound and Music Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btnSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#050505"
            android:padding="12dp"
            android:text="Sound: ON"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:backgroundTint="#070606"
            android:padding="12dp"
            android:text="Music: ON"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="87dp"
        android:layout_height="200dp"
        android:backgroundTint="#070606"
        android:text="Reset Game" />

</LinearLayout>
